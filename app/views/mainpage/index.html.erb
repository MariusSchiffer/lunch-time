<div class="container">
    <h1>Menu</h1>
    <h3> <%= @date.strftime("%a, %d/%m") %> </h3>
    <%= link_to "Previous day", index_path(day_shift: @day_shift - 1, language: @language), :class => "btn btn-primary" %>
    <%= link_to "Next day", index_path(day_shift: @day_shift + 1, language: @language), :class => "btn btn-primary"  %>


    <div class="row">
        <div class="restaurant col-md-6 mt-3">
        <span class="restauran-header" style="font-size:3em">Hertsi</span> <br/>
        <%if @sodexo_data && @sodexo_data.length > 0%>
            <% @sodexo_data.each do |item| %>
                <%= render partial: "item", locals: { item: item } %>
            <% end %>
        <% else %>
            <div class="out-of-service">OUT OF SERVICE</div>
        <% end %>
        </div>
    </div>
</div>

